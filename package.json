{
  "name": "experiment-yarn-v3-monorepo",
  "version": "1.0.0",
  "author": "akky-xxxx <114.s.aki@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "20.8.0",
    "npm": "⚠️️  【yarn】 を使ってください",
    "yarn": "3.6.4"
  },
  "packageManager": "yarn@3.6.4",
  "main": "index.js",
  "scripts": {
    "fix": "run-p \"fix:*\" -c",
    "fix:pack": "fixpack",
    "lint": "run-p \"lint:*\" -c",
    "lint:pack": "fixpack --dryRun",
    "prepare": "yarn workspaces foreach -vpi run prepare",
    "ws-build": "yarn workspaces foreach -vpi run build",
    "ws-dev": "yarn workspaces foreach -vpi run dev",
    "ws-fix": "yarn workspaces foreach -vpi run fix",
    "ws-lint": "yarn workspaces foreach -vpi run lint",
    "ws-start": "yarn workspaces foreach -vpi run start",
    "ws-storybook": "yarn workspaces foreach -vpi run storybook"
  },
  "devDependencies": {
    "eslint": "8.51.0",
    "eslint-config-next": "13.5.4",
    "fixpack": "4.0.0",
    "npm-run-all": "4.1.5",
    "typescript": "5.2.2",
    "vite": "4.4.11"
  },
  "workspaces": [
    "packages/*"
  ]
}
