{
  "name": "experiment-yarn-v3-monorepo",
  "version": "1.0.0",
  "author": "akky-xxxx <114.s.aki@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "20.8.0",
    "npm": "⚠️️  【yarn】 を使ってください",
    "yarn": "4.0.1"
  },
  "packageManager": "yarn@4.0.1",
  "main": "index.js",
  "scripts": {
    "fix": "run-p \"fix:*\" -c",
    "fix:config": "prettier \"./config/**/*\" \"./*.ts\" --write",
    "fix:pack": "fixpack",
    "lint": "run-p \"lint:*\" -c",
    "lint:config": "prettier \"./config/**/*\" --check",
    "lint:pack": "fixpack --dryRun",
    "prepare": "yarn workspaces foreach -A -vpi run prepare",
    "ws-build": "yarn workspaces foreach -A -vpi run build",
    "ws-dev": "yarn workspaces foreach -A -vpi run dev",
    "ws-fix": "yarn workspaces foreach -A -vpi run fix",
    "ws-lint": "yarn workspaces foreach -A -vpi run lint",
    "ws-start": "yarn workspaces foreach -A -vpi run start",
    "ws-storybook": "yarn workspaces foreach -A -vpi run storybook",
    "ws-type-check": "yarn workspaces foreach -A -vpi run type-check"
  },
  "devDependencies": {
    "@markuplint/jsx-parser": "3.11.0",
    "@markuplint/react-spec": "3.12.0",
    "@tsconfig/strictest": "2.0.2",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "eslint": "8.52.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "14.0.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-strict-check": "0.0.18",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-strict-check": "0.0.15",
    "eslint-plugin-unicorn": "49.0.0",
    "fixpack": "4.0.0",
    "jest": "29.7.0",
    "markuplint": "3.14.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "typescript": "5.2.2",
    "vite": "4.5.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
